{
  "name": "periscope",
  "displayName": "Periscope",
  "description": "ripgrep workspace search with file peek",
  "version": "0.7.0",
  "publisher": "JoshMu",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshmu/periscope"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "periscope.search",
        "title": "Periscope: Search"
      }
    ],
    "configuration": {
      "title": "Periscope",
      "properties": {
        "periscope.rgOptions": {
          "type": "array",
          "default": [
            "--smart-case",
            "--sortr path"
          ],
          "items": {
            "type": "string"
          },
          "description": "Additional options to pass to the 'rg' command, you can view all options in your terminal via 'rg --help'."
        },
        "periscope.addSrcPaths": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional source paths to include in the rg search.  You may want to add this as a workspace specific setting."
        },
        "periscope.folderDisplayDepth": {
          "type": "number",
          "default": 4,
          "description": "The folder depth to display for the results"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  },
  "license": "SEE LICENSE IN LICENSE.txt"
}
